    private List<Contact> contacts;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        contacts = new List<Contact>
        {
            new Contact
            {
                FirstName = "Sreejan",
                LastName = "Chowdhury",
                Email = "sc@gmail.com"
            },
            new Contact
            {
                FirstName = "Akash",
                LastName = "Derasree",
                Email = "skyad@gmail.com"
            }
        };
    }
}